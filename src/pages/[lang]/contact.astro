---
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import Layout from "../../layouts/Layout.astro";
import {
  EarthIcon,
  GithubIcon,
  Linkedin,
  LucideTwitter,
  MicIcon,
  TwitterIcon,
  XIcon,
} from "@lucide/astro";

export function getStaticPaths() {
  return [
    { params: { lang: "en" } },
    { params: { lang: "es" } },
    { params: { lang: "pt" } },
  ];
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const LINKS = [
  {
    href: "https://www.linkedin.com/company/rpcide",
    label: "Linkedin",
    icon: Linkedin,
  },
  {
    href: "https://x.com/rpcide",
    label: "Twitter",
    icon: LucideTwitter,
  },
  {
    href: "https://discord.gg/rpcide",
    label: "Discord",
    icon: MicIcon,
  },
  {
    href: "https://github.com/rpcide",
    label: "GitHub",
    icon: GithubIcon,
  },
  {
    href: "https://blog.rpcide.cloud",
    label: "Blog",
    icon: EarthIcon,
  },
];
---

<Layout
  title={`${t("about.title")} | ${t("title")}`}
  description={t("about.subtitle")}
  className="max-w-full !px-0 !mb-0"
>
  <section
    class="relative z-10 container mx-auto max-w-6xl py-20 px-4 grid gap-8"
  >
    <div>
      <h2 class="text-3xl font-bold mb-4">{t("contact.title")}</h2>
      <p class="text-muted-foreground text-lg">{t("contact.subtitle")}</p>
    </div>

    <div>
      <h3 class="text-lg font-semibold mb-2">Social</h3>

      <ul class="space-x-4 text-md text-muted-foreground flex">
        {
          LINKS.map(({ href, label, icon: Icon }) => (
            <li>
              <a
                href={href}
                class="transition-colors flex items-center gap-2 hover:text-foreground
                "
                target="_blank"
              >
                <Icon class="inline h-4 w-4" />
                {label}
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <div>
      <h3 class="text-lg font-semibold mb-2">{t("contact.email")}</h3>
      <p class="text-md text-muted-foreground">
        {t("contact.email.placeholder")}{" "}
        <a
          href="mailto:rpcideofficial@gmail.com"
          class="transition-colors underline underline-offset-4"
        >
          rpcideofficial@gmail.com
        </a>
      </p>
    </div>

    <div>
      <img
        src="https://res.cloudinary.com/dcojfnrpe/image/upload/v1758506710/Screen_Shot_2025-09-21_at_21.03.49_oy03k1.png"
        alt="RPCIDE editor screenshot"
        class="w-full mx-auto mt-8"
      />
    </div>
  </section>
</Layout>
