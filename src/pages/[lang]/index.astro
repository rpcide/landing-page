---
import CTA from "@/components/sections/CTA.astro";
import Features from "@/components/sections/Features.astro";
import Hero from "@/components/sections/Hero.astro";
import Languages from "@/components/sections/Languages.astro";
import PreviewEditor from "@/components/sections/PreviewEditor.astro";
import Layout from "../../layouts/Layout.astro";

export function getStaticPaths() {
  return [
    { params: { lang: "en" } },
    { params: { lang: "es" } },
    { params: { lang: "pt" } },
  ];
}

const { lang } = Astro.params;
---

<Layout
  title="RPCIDE"
  description="RPCIDE is a platform for developers to create and share RPC interfaces."
  className="max-w-full !px-0 !mb-0"
>
  <div>
    <Hero />
    <Features />
    <PreviewEditor />
    <Languages />
    <CTA />
  </div>
</Layout>
